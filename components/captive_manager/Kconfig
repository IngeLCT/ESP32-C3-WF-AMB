menu "Captive Manager"
    config CAPTIVE_MANAGER_ENABLE
        bool "Enable Captive Manager"
        default y

    config CAPTIVE_MANAGER_AP_SSID
        string "AP SSID temporal"
        default "ESP-LOGIN"

    config CAPTIVE_MANAGER_AP_PASS
        string "AP password temporal (>=8 chars para WPA2)"
        default "esp32login"

    config CAPTIVE_MANAGER_CONNECTIVITY_URL
        string "URL de verificación de conectividad"
        default "http://connectivitycheck.gstatic.com/generate_204"

    config CAPTIVE_MANAGER_CHECK_INTERVAL_MS
        int "Intervalo (ms) entre chequeos de conectividad"
        default 7000

    config CAPTIVE_MANAGER_VERIFY_SUCCESS_N
        int "Éxitos consecutivos requeridos para confirmar internet"
        default 2

    config CAPTIVE_MANAGER_MAX_SCAN_APS
        int "Máximo de APs listados en /scan"
        default 30

    config CAPTIVE_MANAGER_CONN_MAX_ATTEMPTS
        int "Máx. reintentos conexión con credenciales guardadas"
        default 5

    config CAPTIVE_MANAGER_CONN_RETRY_DELAY_MS
        int "Delay (ms) entre reintentos guardados"
        default 4000

    config CAPTIVE_MANAGER_STARTUP_CHECK_DELAY_MS
        int "Delay inicial (ms) antes del primer chequeo tras IP guardada"
        default 1500
endmenu